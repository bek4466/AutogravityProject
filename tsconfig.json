{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "removeComments": false,
        "outDir": "tmp",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "cucumber",
            "jasmine",
            "jasminewd2"
        ]
    },
    "exclude": [
        "tmp",
        "node_modules/**",
        "asyncAwait",
        "plugins.ts",
        "typings"
    ]
}